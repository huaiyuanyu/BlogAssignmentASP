@page
@model BlogAssignment.Pages.Admin.ManageRolesModel
@{
    ViewData["Title"] = "Manage User Roles";
}

<h2>Manage User Roles</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <form method="post">
                        <input type="hidden" name="SelectedUserId" value="@user.Id" />
                        <select name="SelectedRole" class="form-control">
                            <option value="Admin">Admin</option>
                            <option value="Contributor">Contributor</option>
                            <option value="Member">Member</option>
                        </select>
                        <button type="submit" asp-page-handler="AddRole" class="btn btn-success">Add Role</button>
                        <button type="submit" asp-page-handler="RemoveRole" class="btn btn-danger">Remove Role</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
